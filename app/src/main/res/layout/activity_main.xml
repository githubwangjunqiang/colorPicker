<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.xiaoqiang.colorselector.ColorPickerView
            android:id="@+id/colorse"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingEnd="80dp"
            android:paddingBottom="80dp"
            android:visibility="visible" />


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置绿色 着色器"
        android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/se_baxk" />

    <ImageView
        android:id="@+id/biaoji"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:rotation="-90"
        android:layout_marginTop="-10dp"
        android:src="@drawable/ic_label_black_24dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <SeekBar
        android:id="@+id/seebrarara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:max="255" />


</LinearLayout>